$(function() {
	$('#join').submit(function(){
		let user_id = $('input[name="user_id"]').val();
		if(!user_id) {
			alert("아이디를 입력하세요.");
			$('input[name="user_id"]').focus();
			
			return false;
		}
		
		let user_pw = $('input[name="user_pw"]').val();
		if(!user_pw) {
			alert("비밀번호를 입력하세요.");
			$('input[name="user_pw"]').focus();
			
			return false;
		}
		
		
		// 쳌, ㄷ
		if( $('input[name="gender"]').val().is('checked') ) {
			alert("성별을 입력하세요.");
		}
		
	return false;
	});	
});